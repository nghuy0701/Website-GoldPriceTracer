<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="icon" type="image/png" href="/img/icon.png" />
    <link rel="stylesheet" href="css/style.css" />
    <script src="javascript/darkTheme.js"></script>
    <script src="javascript/alertSettings.js"></script>
    <script src="javascript/translation.js"></script>

    <title class="page-title" data-i18n="page_title">Theo dõi giá vàng</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary mb-2">
      <div id="existing-container" class="container-fluid">
        <h2 class="navbar-brand mx-auto nav-title" data-i18n="app_title">
          Theo dõi giá vàng
        </h2>
        <!-- Dark Mode Toggle -->
        <div class="buttons-container">
          <button id="lang-toggle" class="lang-btn" type="button">EN</button>
          <input type="checkbox" id="dark-mode-toggle" />
          <label class="mb-2" for="dark-mode-toggle" id="dark-mode-label">
            <img id="icon" alt="Dark Mode Icon" />
          </label>
        </div>
      </div>
    </nav>
    <div class="container">
      <%- include("./flash")%>
      <!--Daily Gold Rate Card -->
      <div class="row">
        <div class="col-md-12">
          <div class="image-container">
            <!-- Large Screen Image -->
            <img
              src="img/backgroundImage.jpg"
              alt="Background Image"
              class="img-fluid large-image"
            />

            <!-- Small Screen Image -->
            <img
              src="img/backgroundImgSmall2.jpg"
              class="img-fluid small-image"
              alt="Small Background Image"
            />

            <!-- Gold Rate Card Overlay -->
            <div class="card card-overlay">
              <!--Daily Gold Rate Table -->
              <%- include("./dailyPriceTable.ejs")%> %>
            </div>
          </div>
        </div>
      </div>
      <!-- Email Signup Form -->
      <%- include('./emailForm.ejs') %>

      <!--  Historical Gold Rate Table -->
      <%- include('./goldPriceTable.ejs') %>

      <!-- All the paragraphs  -->
      <%- include("./paragraph")%> %>
    </div>

    <footer class="footer py-3 mt-auto text-center">
      <div class="container">
        <span class="text-muted gold-rate-table" data-i18n="footer">
          &copy; Theo dõi giá vàng 2026
        </span>
      </div>
    </footer>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
