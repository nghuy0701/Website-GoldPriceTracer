# Domain
APP_URL=http://localhost:3000

# MongoDB Atlas
DATABASE_URL=mongodb+srv://<username>:<password>@<cluster-host>/?appName=<cluster-name>

# SMTP (Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your@gmail.com
SMTP_PASS=your_app_password
SENDER_EMAIL=your@gmail.com

# Protect /get-data and /send-mail
AUTH_TOKEN=username:password

# Gold price API (TP.HCM - DOJI)
GOLD_API_URL=https://www.vang.today/api/prices
GOLD_TYPE_CODE=DOHCML

# Alert price source (reuse JSON API)
GOLD_API_TIMEOUT_MS=20000
ALERT_PRICE_FIELD=sell
ALERT_COOLDOWN_MINUTES=120

# Scheduler (cron)
CRON_ENABLED=true
CRON_TIME_FETCH=0 8 * * *
CRON_TIME_EMAIL=5 8 * * *
CRON_TIME_ALERT=0 */2 * * *
CRON_TIMEZONE=Asia/Ho_Chi_Minh
